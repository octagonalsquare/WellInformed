<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <solid android:color="#039BE5" />

            <padding
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:top="5dp" />


            <corners android:radius="10dp" />

        </shape>
    </item>

    <item android:width="10dp"
        android:height="10dp">
        <shape android:shape="oval"
               android:radius="3dp">
            <solid android:color="@color/lightBackground"></solid>

        </shape>
    </item>
    <item android:width="10dp"
        android:height="10dp"
        android:left="15dp">
        <shape android:shape="oval"
            android:radius="3dp">
            <solid android:color="@color/lightBackground"></solid>

        </shape>
    </item>
    <item android:width="10dp"
          android:height="10dp"
          android:left="30dp">
        <shape android:shape="oval"
            android:radius="3dp">
            <solid android:color="@color/lightBackground"></solid>

        </shape>
    </item>

</layer-list>